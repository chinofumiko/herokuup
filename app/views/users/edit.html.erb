<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">プロフィール編集</h1>
        <%= form_for @user do |f| %>
          <div class="form-group">
            <%= f.label :name, class: 'text-white' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'text-white' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :accountname, "アカウント名", class: 'text-white' %>
            <%= f.text_field :accountname, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :birthday, "誕生日", class: 'text-white' %>
            <%= f.text_field :birthday, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :profile, "自己紹介", class: 'text-white' %>
            <%= f.text_field :profile, class: 'form-control' %>
          </div>
          <%= f.submit "更新", class: 'btn-block btn-white' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
